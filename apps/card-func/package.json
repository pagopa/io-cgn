{
  "name": "card-func",
  "description": "Functions exposed to the citizen",
  "author": "IO CGN",
  "version": "4.0.11",
  "license": "MIT",
  "files": [
    "dist",
    "host.json",
    "**/function.json"
  ],
  "scripts": {
    "prebuild": "shx rm -rf dist && pnpm generate",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "dotenv -e .env func start --javascript",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:api": "sh api-lint.sh",
    "generate": "pnpm generate:definitions && pnpm generate:api-eyca && pnpm generate:api-services && pnpm generate:api-services:messages",
    "generate:definitions": "shx rm -rf generated/definitions && gen-api-models --api-spec openapi/index.yaml --out-dir generated/definitions",
    "generate:api-eyca": "shx rm -rf generated/eyca-api && gen-api-models --api-spec openapi/eyca.yaml --no-strict --out-dir generated/eyca-api --request-types --response-decoders --client",
    "generate:api-services": "shx rm -rf generated/services-api && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-services/v3.3.0/openapi/index.yaml --no-strict --out-dir generated/services-api --request-types --response-decoders --client",
    "generate:api-services:messages": "shx rm -rf generated/services-api-messages && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-messages/refs/tags/services-func@1.0.3/apps/services-func/openapi/index.yaml --no-strict --out-dir generated/services-api-messages --request-types --response-decoders --client",
    "preversion": "auto-changelog  --config .auto-changelog.json --unreleased --commit-limit false --stdout --template preview.hbs",
    "version": "auto-changelog -p --config .auto-changelog.json --unreleased && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "^4.0.1",
    "@pagopa/openapi-codegen-ts": "^12.0.3",
    "@types/express": "^4.17.9",
    "@types/jest": "^29.5.12",
    "@types/node-fetch": "^2.5.7",
    "@types/redis": "^2.8.28",
    "auto-changelog": "2.2.1",
    "dotenv-cli": "^3.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-mock-express": "^0.1.1",
    "modclean": "^3.0.0-beta.1",
    "oval": "^1.0.0",
    "prettier": "^3.4.2",
    "shx": "^0.3.2",
    "ts-jest": "^29.1.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@pagopa/express-azure-functions": "^4.0.1",
    "@pagopa/io-functions-commons": "^29.1.1",
    "@pagopa/ts-commons": "^13.1.2",
    "applicationinsights": "^3.4.0",
    "azure-storage": "^2.10.3",
    "date-fns": "^2.16.1",
    "express": "^4.15.3",
    "fp-ts": "^2.11.1",
    "io-ts": "^2.2.16",
    "node-fetch": "^2.6.1",
    "redis": "^4.6.15",
    "ulid": "^2.3.0"
  }
}
