{
  "name": "search-func",
  "description": "Functions exposed to the citizen that allows to search merchants, offers and opportunities",
  "author": "IO team",
  "version": "3.4.2",
  "license": "MIT",
  "scripts": {
    "prebuild": "shx rm -rf dist && yarn generate:definitions",
    "build": "tsc",
    "start": "dotenv -e .env func start --javascript",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint-api": "oval validate -p openapi/index.yaml",
    "generate:definitions": "shx rm -rf ./generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --out-dir ./generated/definitions",
    "preversion": "auto-changelog  --config .auto-changelog.json --unreleased --commit-limit false --stdout --template preview.hbs",
    "version": "auto-changelog -p --config .auto-changelog.json --unreleased && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "^4.0.1",
    "@pagopa/openapi-codegen-ts": "^12.0.3",
    "@types/express": "^4.17.9",
    "@types/jest": "^29.5.12",
    "@types/node-fetch": "^2.5.7",
    "@types/pg": "^7.14.11",
    "@types/redis": "^2.8.28",
    "@types/sequelize": "^4.28.10",
    "@types/vfile-message": "^2.0.0",
    "auto-changelog": "2.2.1",
    "dependency-check": "^4.1.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "8.57.0",
    "jest": "^29.7.0",
    "jest-mock-express": "^0.1.1",
    "modclean": "^3.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "oval": "^1.0.0",
    "prettier": "^3.4.2",
    "shx": "^0.3.2",
    "ts-jest": "^29.1.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@pagopa/express-azure-functions": "^4.0.1",
    "@pagopa/io-functions-commons": "^29.1.1",
    "@pagopa/ts-commons": "^11.0.0",
    "applicationinsights": "^3.4.0",
    "azure-storage": "^2.10.3",
    "express": "^4.15.3",
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16",
    "node-fetch": "^2.6.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "redis": "^4.6.15",
    "sequelize": "^6.6.2"
  }
}
